<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_car_thumb"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_car_placeholder"
                android:contentDescription="Araç" />
        </FrameLayout>
        
        <TextView
             android:id="@+id/tvCarTitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Renault Clio"
             android:textColor="#E2E8F0"
             android:textSize="12sp"
             android:textStyle="bold"
             android:gravity="center"
             android:layout_marginTop="4dp"/>

        <TextView
             android:id="@+id/tvCarPrice"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="₺1200 / gün"
             android:textColor="#3B82F6"
             android:textSize="11sp"
             android:textStyle="bold"
             android:gravity="center"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
