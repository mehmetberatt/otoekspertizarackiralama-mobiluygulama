<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E293B"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarDetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/abc_ic_ab_back_material"
            app:navigationIconTint="@color/white"
            app:title="Araç Detayı"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Cover Image Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#0F172A">
                
                <ImageView
                    android:id="@+id/imgDetailCar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/car_mercedes_c200"
                    android:scaleType="centerCrop" 
                    android:alpha="0.9"/>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000"/> <!-- Dark overlay -->
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginTop="-24dp"
                android:background="@drawable/bg_bottom_sheet_rounded"
                android:backgroundTint="#1E293B"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercedes C200"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvDetailPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="₺5000 / gün"
                    android:textSize="20sp"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_card"
                        android:backgroundTint="#334155"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvDetailGear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otomatik"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vites"
                            android:textSize="12sp"
                            android:textColor="#94A3B8"/>
                    </LinearLayout>

                    <Space android:layout_width="12dp" android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                         android:background="@drawable/bg_rounded_card"
                        android:backgroundTint="#334155"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvDetailFuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Benzin"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yakıt"
                            android:textSize="12sp"
                            android:textColor="#94A3B8"/>
                    </LinearLayout>

                    <Space android:layout_width="12dp" android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                         android:background="@drawable/bg_rounded_card"
                        android:backgroundTint="#334155"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvDetailLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="İstanbul"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Konum"
                            android:textSize="12sp"
                            android:textColor="#94A3B8"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Araç Açıklaması"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bu araç tam kasko güvencesiyle kiralanmaktadır. 500 km günlük kullanım hakkı vardır. Temiz teslim edilir."
                    android:lineSpacingExtra="4dp"
                    android:textColor="#CBD5E1"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#1E293B"
        android:padding="16dp"
        android:elevation="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRentNow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Hemen Kirala"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primary_blue"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>