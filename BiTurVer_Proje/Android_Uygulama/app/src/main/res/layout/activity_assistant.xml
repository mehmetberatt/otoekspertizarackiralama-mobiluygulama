<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC101922"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="?attr/homeAsUpIndicator"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoBot"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">
                <View
                     android:layout_width="8dp"
                     android:layout_height="8dp"
                     android:background="@drawable/dot_active" 
                     android:backgroundTint="#10B981"/> <!-- Online green dot -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI ASİSTAN ÇEVRİMİÇİ"
                    android:textColor="#64748B"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:src="@android:drawable/ic_dialog_info"
             app:tint="@color/white"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Chat Content -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/quickSuggestions"
        tools:listitem="@layout/item_chat_message_bot"/> <!-- Need to create item layouts -->

    <!-- Quick Suggestions -->
     <HorizontalScrollView
         android:id="@+id/quickSuggestions"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingVertical="8dp"
         android:background="@color/background_dark"
         android:scrollbars="none"
         app:layout_constraintBottom_toTopOf="@id/inputArea">
         
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingHorizontal="12dp">
             
             <!-- Suggestion 1 -->
             <LinearLayout
                 android:id="@+id/btnSuggestRent"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:background="@drawable/bg_rounded_card"
                 android:backgroundTint="#1B2127"
                 android:gravity="center"
                 android:paddingHorizontal="16dp"
                 android:layout_marginEnd="8dp">
                 <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_menu_compass" app:tint="@color/primary_blue"/>
                 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Araç kirala" android:textColor="@color/white" android:textSize="12sp" android:layout_marginStart="8dp"/>
             </LinearLayout>

             <!-- Suggestion 2 -->
             <LinearLayout
                 android:id="@+id/btnSuggestExpert"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:background="@drawable/bg_rounded_card"
                 android:backgroundTint="#1B2127"
                 android:gravity="center"
                 android:paddingHorizontal="16dp"
                 android:layout_marginEnd="8dp">
                 <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_menu_agenda" app:tint="@color/primary_blue"/>
                 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ekspertiz durumu" android:textColor="@color/white" android:textSize="12sp" android:layout_marginStart="8dp"/>
             </LinearLayout>
             
              <!-- Suggestion 3 -->
             <LinearLayout
                 android:id="@+id/btnSuggestDamage"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:background="@drawable/bg_rounded_card"
                 android:backgroundTint="#1B2127"
                 android:gravity="center"
                 android:paddingHorizontal="16dp">
                 <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_menu_camera" app:tint="@color/primary_blue"/>
                 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hasar tespiti" android:textColor="@color/white" android:textSize="12sp" android:layout_marginStart="8dp"/>
             </LinearLayout>


         </LinearLayout>
     </HorizontalScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:id="@+id/inputArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#101922"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/ic_robot" 
             app:tint="@color/white"/> <!-- Robot Icon -->

        <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="12dp"
             android:background="@drawable/bg_rounded_card"
             android:backgroundTint="#1B2127"
             android:orientation="horizontal"
             android:gravity="center_vertical"
             android:paddingStart="16dp"
             android:paddingEnd="4dp"
             android:paddingVertical="4dp">
             
             <EditText
                 android:id="@+id/etMessage"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="@null"
                 android:hint="AutoBot'a bir şey sorun..."
                 android:textColorHint="#64748B"
                 android:textColor="@color/white"
                 android:textSize="14sp"
                 android:minHeight="40dp"/>

             <ImageView android:layout_width="32dp" android:layout_height="32dp" android:padding="6dp" android:src="@android:drawable/ic_btn_speak_now" app:tint="#64748B"/>
             <ImageView android:layout_width="32dp" android:layout_height="32dp" android:padding="6dp" android:src="@android:drawable/ic_menu_gallery" app:tint="#64748B"/>
             
             <ImageView
                  android:id="@+id/btnSend"
                  android:layout_width="36dp"
                  android:layout_height="36dp"
                  android:padding="8dp"
                  android:src="@android:drawable/ic_menu_send"
                  app:tint="@color/white"
                  android:background="@drawable/bg_rounded_card"
                  android:backgroundTint="@color/primary_blue"
                  android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>