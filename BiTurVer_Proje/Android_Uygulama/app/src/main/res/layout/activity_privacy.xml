<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E293B"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:title="Gizlilik ve Güvenlik"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Son Güncelleme: 20 Ocak 2026"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="BiTurVer Gizlilik Politikası"
                android:textColor="@color/primary_blue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:text="BiTurVer ('Uygulama') olarak, kişisel verilerinizin güvenliği hususuna azami hassasiyet göstermekteyiz. 6698 sayılı Kişisel Verilerin Korunması Kanunu ('KVKK') çerçevesinde verileriniz aşağıdaki prensiplerle işlenmektedir."
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="#334155" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="@color/primary_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. İşlenen Kişisel Veriler"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="3dp"
                        android:text="Hizmetlerimizi sunabilmek adına şu veriler toplanmaktadır:\n• Kimlik Bilgileri (Ad, Soyad, T.C. Kimlik No)\n• İletişim Bilgileri (Telefon, E-posta, Adres)\n• Ehliyet ve Sürücü Belgesi Görüntüleri"
                        android:textColor="#CBD5E1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="@color/primary_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Konum Verilerinin Kullanımı"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="3dp"
                        android:text="Size en yakın araçları listelemek ve 'Vale Hizmeti' sunabilmek amacıyla anlık konum verisi işlenmektedir. Konum verileri, kiralama işlemi bittiğinde sunucularımızdan anonimleştirilerek saklanır."
                        android:textColor="#CBD5E1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="@color/primary_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Finansal Güvenlik (SSL)"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="3dp"
                        android:text="Kredi kartı bilgileriniz BiTurVer sunucularında tutulmaz. Tüm ödeme işlemleri 256-bit SSL sertifikası ile şifrelenerek, BDDK lisanslı aracı ödeme kuruluşları üzerinden gerçekleştirilir."
                        android:textColor="#CBD5E1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="@color/primary_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. Veri Paylaşımı"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="3dp"
                        android:text="Kişisel verileriniz, yasal zorunluluklar (trafik cezaları, adli talepler) ve sigorta işlemleri haricinde üçüncü taraflarla asla paylaşılmaz."
                        android:textColor="#CBD5E1"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:background="#334155" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="Bu politika hakkında sorularınız için:\nhukuk@biturver.com"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="1dp"
                android:layout_height="40dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>